{% extends 'base.html.twig' %}

{% block body %}
    <h1>Enfant</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ enfant.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ enfant.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ enfant.prenom }}</td>
            </tr>
            <tr>
                <th>Datedecreation</th>
                <td>{% if enfant.dateDeCreation %}{{ enfant.dateDeCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ enfant.adresse }}</td>
            </tr>
            <tr>
                <th>Codepostal</th>
                <td>{{ enfant.codePostal }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ enfant.ville }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ enfant.genre }}</td>
            </tr>
            <tr>
                <th>Statutlivraison</th>
                <td>{{ enfant.statutLivraison }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('enfant_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('enfant_edit', { 'id': enfant.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
